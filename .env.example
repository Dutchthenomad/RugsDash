# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Server Configuration
PORT=5000
NODE_ENV=development

# Security Configuration (REQUIRED for production)
JWT_SECRET=generate-a-secure-32-character-minimum-secret-key
JWT_ACCESS_TOKEN_EXPIRES=15m
JWT_REFRESH_TOKEN_EXPIRES=7d
SESSION_SECRET=generate-another-secure-32-character-minimum-secret

# External Services
RUGS_BACKEND_URL=https://backend.rugs.fun
RUGS_FRONTEND_VERSION=1.0

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_Q_LEARNING=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_MAX_REQUESTS=5

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000